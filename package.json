{
  "name": "react-native-styledstring",
  "version": "1.0.0",
  "description": "Styled string with format in React Native",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "yarn run build",
    "preflight": "yarn run test && yarn run lint",
    "prepublishOnly": "yarn preflight",
    "preversion": "yarn run lint",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint . --ext js,ts,tsx --max-warnings 0",
    "test": "jest --config jestconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faberNovel/react-native-styledstring.git"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "style",
    "attributedstring",
    "spannablestring",
    "react",
    "native"
  ],
  "author": "Pierre Felgines",
  "license": "ISC",
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.0.1",
    "@types/jest": "^27.4.0",
    "@types/react-native": "^0.66.15",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-flowtype": "8.0.3",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  }
}
